{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "target": "ES2022",
    "module": "commonjs",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ],
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "strictPropertyInitialization": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
